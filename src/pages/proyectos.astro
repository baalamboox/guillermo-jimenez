---
import Layout from "./src/layouts/Layout.astro";
import "./src/css/projects.css";

import data from "./src/data/data.js";

const { projects } = data;

console.log(projects);
---

<Layout title="Proyectos">
    <div class="gj:projects:wrapper">
        <div class="gj:projects:carousel-wrapper">
            <div class="gj:projects:carousel">
                <div class="gj:projects:carousel-items" id="carouselItems">
                    {
                        Object.keys(projects).map((project) => (
                            <div class="gj:projects:carousel-card">
                                <picture>
                                    <source srcset={ "./src/assets/img/projects/" + project + "/" + projects[project].screenshot + ".png"} />
                                    <img class="gj:projects:carousel-card-img" src={ "./src/assets/img/projects/" + project + "/" + projects[project].screenshot + ".png"} alt="" width="1920" height="1080" loading="lazy">
                                </picture>
                            </div>
                        ))
                    }
                </div>
            </div>
            
            <div class="gj:projects:carousel-nav" id="gjProjectsCarouselNav">
                
            </div>
            <div class="gj:projects:carousel-control-wrapper">
